#include <iostream>

int main() {
    int n;
    std::cout << "Enter the value of n: ";
    std::cin >> n;

    int sum_even = 0, sum_odd = 0;

    for (int i = 1; i <= n; ++i) {
        if (i % 2 == 0) { 
            sum_even += i;
        } else { 
            sum_odd += i;
        }
    }

    std::cout << "Sum of even integers of the first " << n << " natural numbers: " << sum_even << std::endl;
    std::cout << "Sum of odd integers of the first " << n << " natural numbers: " << sum_odd << std::endl;

    return 0;
}
